<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs',{page_name:'Đổi mật khẩu'}) %>
<body>
  <%- include('hotStyles.ejs') %>
  <!-- Loader -->
  <div id="loading">
    <img id="loading-image" src="/img/Gordon.gif" alt="Loading..." />
  </div>
  <!-- HEADER BEGIN -->
  <%- include('menus/headerMenu.ejs',{user}) %>
  <!-- HEADER END -->
  <div class="d-flex align-items-stretch">
    <nav id="sidebar">
      <%- include('menus/menu.ejs',{device:'pc'}) %>
    </nav>
    <div class="page-content" style="padding-bottom:70px;">
      <div class="page-header">
        <div class="container-fluid">
          <h2 class="h5 no-margin-bottom">Đổi mật khẩu</h2>
        </div>
      </div>

      <section>
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="block p-5">
                <% if(typeof errors != 'undefined') { %>
                  <div class="row">
                    <div class="col-12">
                      <div class="alert fade alert-simple alert-danger alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" role="alert" data-brk-library="component__alert">
                        <% errors.forEach(error =>{ %>
                            <p style="margin-bottom:0 !important">
                              <i class="start-icon fa fa-exclamation-triangle faa-flash animated"></i>
                              <span><%= error.message %>.</span>
                            </p>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                <% } %>

                <% if(messages.success_msg) { %>
                  <div class="alert fade alert-simple alert-success alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" role="alert" data-brk-library="component__alert">
                      <p style="margin-bottom:0 !important">
                        <span><%= messages.success_msg %>.</span>
                      </p>
                  </div>
                <% } %>

                <form class="form-validate" novalidate="novalidate" method="post" name="changePassword">
                  <div class="form-group">
                    <label>Mật khẩu cũ</label>
                    <input type="password" class="form-control" name="oldPassword" placeholder="" required="" data-msg="Vui lòng nhập mật khẩu cũ" autocomplete="off"/>
                  </div>
                  <div class="form-group">
                    <label>Mật khẩu mới</label>
                    <input type="password" class="form-control" name="newPassword" placeholder="" required="" data-msg="Vui lòng nhập mật khẩu mới" autocomplete="off"/>
                  </div>
                  <div class="form-group">
                    <label>Xác nhận mật khẩu mới</label>
                    <input type="password" class="form-control" name="newPassword2" placeholder="" required="" data-msg="Vui lòng xác nhận mật khẩu" autocomplete="off"/>
                  </div>
                  <!-- Submit-->
                  <input type="submit" value="Thay đổi" name="submit" class="btn btn-lg btn-block btn-primary mt-5" id="changePswBtn"/>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>

    </div>
  </div>
</body>
<%- include ('tail.ejs') %>
<script src="/js/favico.min.js"></script>
<script src="/js/custom-script.js" charset="utf-8"></script>
</html>
